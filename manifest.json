{
  "manifest_version": 2,
  "name": "Github notifier",
  "version": "1.0",
  "description": "extension for github notifications",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js", "popup.js"],
    "persistent": true
  },

  "permissions": ["storage", "notifications"],

  "options_page": "options.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js; object-src 'self'"
}
